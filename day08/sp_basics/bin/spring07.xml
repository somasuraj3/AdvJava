<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.1.xsd">
	
	<context:component-scan base-package="com.sh.spring07"/>

	<bean id="p1" class="com.sh.spring07.PersonImpl" >
		<property name="name" value="Nilesh"/>
		<property name="address" value="Pune"/>
		<property name="email" value="nilesh@sunbeaminfo.com"/>
	</bean>
	
	<bean id="accHolder" class="com.sh.spring07.PersonImpl" >
		<property name="name" value="Rahul"/>
		<property name="address" value="Karad"/>
		<property name="email" value="rahul@sunbeaminfo.com"/>
	</bean>
</beans>
