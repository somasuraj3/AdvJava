<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd">
	<!-- Setter Based DI -->
	<bean id="b1" class="com.sh.spring01.Box">
		<property name="length" value="3"/>
		<property name="breadth" value="2"/>
		<property name="height" value="1"/>
	</bean>
	<!-- Setter Based DI -->
	<bean id="b2" class="com.sh.spring01.Box">
		<property name="length" value="4"/>
		<property name="breadth" value="3"/>
		<property name="height" value="2"/>
	</bean>
	<!-- Constructor Based DI -->
	<bean id="b3" class="com.sh.spring01.Box">
		<constructor-arg index="0" value="5"/>
		<constructor-arg index="1" value="4"/>
		<constructor-arg index="2" value="3"/>
	</bean>
	<!-- Constructor Based DI -->
	<bean id="b4" class="com.sh.spring01.Box">
		<constructor-arg index="0" value="5"/>
		<constructor-arg index="1" value="3"/>
		<constructor-arg index="2" value="1"/>
	</bean>
</beans>
